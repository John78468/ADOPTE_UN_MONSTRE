<h2><strong>Mes Monstres</strong></h2>
<p>Add</p>
<% if @user.monsters.first.nil? %>
  <p>No monsters</p>
<% else %>
  <% @user.monsters.each do |monster|%>
    <% if monster.include?(@user.enlisted_monster) %>
      <% class_monster = "monstre enlisted" %>
    <% else %>
      <% class_monster = "monstre" %>
    <% end %>
    <p class="<%= class_monster %>"><%= monster.name %></p>
  <% end %>
<% end %>
